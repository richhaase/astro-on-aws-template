---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component script." It never runs in the browser.
const pageTitle = "{{PROJECT_TITLE}}";
---

<!-- This is your first Astro page. Any HTML is valid here! -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="min-h-screen bg-gray-50 flex items-center justify-center">
    <main class="text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{pageTitle}</h1>
      <p class="text-lg text-gray-600 mb-8">{{PROJECT_DESCRIPTION}}</p>
      <p class="text-sm text-gray-500">
        Built with <a href="https://astro.build" class="text-indigo-600 hover:text-indigo-500">Astro</a> 
        and deployed to AWS
      </p>
    </main>
  </body>
</html>