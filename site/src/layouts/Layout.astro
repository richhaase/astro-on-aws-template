---
import '../styles/global.css'

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const { 
  title, 
  description = "Unified package and dotfile manager for developers who tinker. One command to set up your entire development environment.",
  keywords = "plonk, cli, package manager, dotfiles, developer tools, homebrew, npm, cargo, go, python, unix, macos, linux",
  ogImage = "https://plonk.sh/og-image.png",
  canonicalUrl = Astro.url.href
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Rich Haase" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Plonk" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Plonk - Unified package and dotfile manager" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@richhaase" />
    <meta name="twitter:site" content="@richhaase" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Plonk - Unified package and dotfile manager" />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#4f46e5" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Plonk",
        "description": "Unified package and dotfile manager for developers who tinker. One command to set up your entire development environment.",
        "url": "https://plonk.sh",
        "downloadUrl": "https://github.com/richhaase/plonk",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": ["macOS", "Linux", "Windows"],
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "author": {
          "@type": "Person",
          "name": "Rich Haase",
          "url": "https://richhaase.com"
        },
        "publisher": {
          "@type": "Person",
          "name": "Rich Haase"
        },
        "programmingLanguage": "Go",
        "license": "https://opensource.org/licenses/MIT"
      }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-gray-50 text-gray-900">
    <!-- Skip to content link for screen readers -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium">
      Skip to main content
    </a>
    
    <slot />
  </body>
</html>